<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/short_content_width_padding"
        android:paddingRight="@dimen/short_content_width_padding">

        <ProgressBar
            android:layout_centerInParent="true"
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/textMain"
            style="@style/TextAppearance.Secondary.Big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@id/progressBar"
            android:gravity="center" />

        <TextView
            android:id="@+id/organizingFilesText"
            android:layout_marginTop="@dimen/short_content_width_padding"
            style="@style/TextAppearance.Primary.Big"
            android:text="@string/mesg_organizingFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/progressBar" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_marginTop="15dp"
            android:layout_below="@id/organizingFilesText"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/butn_cancel" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>